
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Source/css/user-form.css" rel="stylesheet" />
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/Source/img/favicon.png" />
    <title>DDA's Food Corner - The taste from our heart</title>
</head>
<body>
    <div class="login-page">
        <div class="form">
            @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                <label class="message">Tên đăng nhập:</label>
                <div class="col-md-10">
                    <input type="text" name="Username" />
                </div>
            </div>

            <div class="form-group">
                <label class="message">Mật khẩu:</label>
                <div class="col-md-10">
                    <input type="text" name="Psw" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input id="btnSubmit" type="submit" value="Đăng nhập" class="button" />
                </div>
            </div>
        </div>
}

            <p class="message">Chưa có tài khoản? <a href="Register">Đăng ký</a></p>
            <p class="message" ><a href="~/Home/Index">Quay về trang chủ</a></p>
        </div>
    </div>
</body>
</html>
