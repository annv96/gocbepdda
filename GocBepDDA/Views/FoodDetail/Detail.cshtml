@using GocBepDDA.Models;
@model Food
@{
    ViewBag.Title = "DDA's Foods Corner- The taste from our heart";
    Layout = "~/Views/Page_Layout/HomePageLayout.cshtml";
}

<!--
Start Detail Section
==================================== -->
<section id="detail" class="bg-one">
    <div class="container">
        <div class="row">
            <!-- section title -->
            <div class="title text-center wow fadeInDown">
                <h2> Chi tiết <span style="color:orangered">Món ăn</span></h2>
                <div class="border"></div>
            </div>
            <!-- /section title -->
        </div>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <table class="nav-justified">
                        <tr>
                            <td rowspan="4" style="width: 433px">
                                &nbsp;
                                <img src="@Url.Content("~/Content/"+Model.Image)" height="400" width="600" />
                            </td>
                            <td style="width: 10%">&nbsp;</td>
                            <td><h3>@Model.Name</h3></td>
                        </tr>
                        <tr>
                            <td style="width: 10%; height: 50%"></td>
                            <td style="height: 50%"><h4>@Model.Description</h4></td>
                        </tr>
                        <tr>
                            <td style="width: 10%">&nbsp;</td>
                            <td><h3>Giá:&nbsp;<span style="color:orangered; font-size: 50px">@Model.Price&nbsp;VNĐ</span></h3></td>
                        </tr>
                        <tr>
                            <td style="width: 51px; height: 61px"></td>
                            <td style="height: 61px">
                                <div class="row">
                                    <div class="col-sm-3">
                                        @using (Html.BeginForm("AddCart", "Cart", new { @prdId = Model.Id, @strUrl = Request.Url.ToString() }))
                                        {
                                            <input type="submit" class="btn btn-transparent" name="name" value="Đặt hàng ngay" />
                                        }
                                    </div>
                                    <div class="col-sm-6"></div>
                                    <div class="col-sm-3 btn btn-transparent"><a href="~/Home/Index">Trở về</a></div>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>  <br /><br /><br />
</section>
<!--
End Detail Section
==================================== -->
